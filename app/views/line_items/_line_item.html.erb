<% if @current_item == line_item %>
<tr class='line-item-highlight'>
<% else %>
<tr>
<% end %>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2"><%= line_item.product.title %></td>
  <td class="text-right font-bold">
    <%= number_to_currency(localize_currency(line_item.total_price)) %>
  </td>
  <td>
    <%= button_to ' - ', decrement_line_item_path(line_item),
        class: 'ml-2 rounded-full px-1 bg-red-200' %>
  </td>
  <td>
    <%= button_to 'Delete', line_item_path(line_item),
        method: :delete, class: 'ml-1 rounded-lg px-1 text-white bg-red-400' %>
  </td>
</tr>
      